{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@models/*": ["src/models/*"],

      "@/*": [
        "src/*"
      ]
    },

    "outDir": "./dist",
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "skipLibCheck": false ,
  },
  "include": [
    "types/**/*.d.ts",
    "src/**/*"
  ]
}
